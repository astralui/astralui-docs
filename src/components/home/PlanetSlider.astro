---
const images = [
    "/images/planets/mercury.webp",
    "/images/planets/venus.webp",
    "/images/planets/earth.webp",
    "/images/planets/mars.webp",
    "/images/planets/jupiter.webp",
    "/images/planets/saturn.webp",
    "/images/planets/uranus.webp",
    "/images/planets/neptune.webp",
];
---

<div class="content-slider">
    <div class="list-of-contents">
        {
            images.map((src, index) => (
                <div
                    class="content-img"
                    style={{ "--content-position": index }}
                >
                    <img src={src} alt="" />
                </div>
            ))
        }
    </div>
</div>

<style>
    .content-slider {
        --content-width: 400px;
        --content-height: 400px;
        --content-quantity: 8;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
        mask-image: linear-gradient(
            to right,
            transparent,
            black 20%,
            black 80%,
            transparent
        );
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: -50;
    }

    .content-slider .list-of-contents {
        width: 100%;
        height: 100%;
        min-width: calc(var(--content-width) * var(--content-quantity));
        position: relative;
    }

    .content-slider .list-of-contents .content-img {
        width: var(--content-width);
        height: var(--content-height);
        position: absolute;
        left: 100%;
        top: 0;
        bottom: 0;
        margin: auto;
        animation: sliderAutoRun 20s linear infinite;
        transition: all 0.5s ease-in-out;
        animation-delay: calc(
            (20s / var(--content-quantity)) * (var(--content-position) - 1)
        );
        -webkit-animation-delay: calc(
            (20s / var(--content-quantity)) * (var(--content-position) - 1)
        );
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @keyframes sliderAutoRun {
        from {
            left: 100%;
        }
        to {
            left: calc(-1 * (var(--content-width) + 20px));
        }
    }
    .content-slider:hover .content-img {
        animation-play-state: paused !important;
        filter: grayscale(1);
    }

    .content-slider .list-of-contents .content-img img {
        width: 100%;
    }

    .content-slider .list-of-contents .content-img:hover {
        z-index: 10;
        overflow: visible !important;
        transform: perspective(800px) rotateX(20deg) scale(1.2)
            scale3d(1.1, 1.1, 1.1);
        filter: grayscale(0);
        transition: all 0.5s ease-in-out;
    }
</style>
